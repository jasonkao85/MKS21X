package com.kao.src;

public class Paddle {
	
	public int paddleNum;
	
	public int x, y, width = 100, height = 500;

	public Paddle(int paddleNum) {
		this.paddleNum = paddleNum;
		
		if (paddleNum == 0){
			this.x = width;
		}
		if (paddleNum == 1){
			this.x = width;
		}
		this.y = Pong.pong.height / 2 - this.height / 2;
	}

}
