package com.kao.src;

import java.awt.Color;
import java.awt.Graphics;

public class Fighter {
	
	public int x, y, width = 10, height = 40;
	
	public int angle, speedForward, speedRotate;
	
	public int distanceFromBorder = 20, distanceFromBottom = 60;

	public Fighter(Cow cow, int fighterNumber) {
		
		switch (fighterNumber) {
		case 1: // lower left corner
			x = 0 + distanceFromBorder;
			y = cow.height - distanceFromBorder - distanceFromBottom;
			break;
		case 2: // upper right corner
			x = cow.width - distanceFromBorder;
			y = 0 + distanceFromBorder;
			break;
		case 3: // upper left corner
			x = 0 + distanceFromBorder;
			y = 0 + distanceFromBorder;
			break;
		case 4: // lower right corner
			x = cow.width - distanceFromBorder;
			y = cow.height - distanceFromBorder - distanceFromBottom;
			break;
		default:
			System.out.println("Invalid number of players.");
		}
	}
	
	public void turn() {
		
	}
	
	public void render(Graphics g) {
		g.setColor(Color.WHITE);
		g.fillRect(x, y, width, height);	
	}

}
