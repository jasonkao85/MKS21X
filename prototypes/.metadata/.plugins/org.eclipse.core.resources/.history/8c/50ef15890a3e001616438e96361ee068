package com.kao.src;

import java.awt.Color;
import java.awt.Graphics2D;
import java.util.Random;

public class Ball {
	
	public int x, y, width = 15, height = 15;
	
	public int motionX, motionY;
	
	public Random random;
	
	private Pong pong;
	
	public int amountOfHits;

	public Ball(Pong pong) {
		
		this.pong = pong;
		
		this.random = new Random();
		
		spawn();
	}
	
	public void update(Paddle paddle1, Paddle paddle2){
		this.x += motionX * 3;
		this.y += motionY * 3;
		
		// collision with top or bottom
		if (this.y <= 0 || this.y + height >= pong.height) {
			if (this.motionY < 0) {
				this.motionY = random.nextInt(4);
			} else {
				this.motionY = -random.nextInt(4);				
			}
		}
		
		if (checkCollision(paddle1) == 1) {
			this.motionX = 1 + amountOfHits / 5;
			this.motionY = -2 + random.nextInt(4);
			
			if (motionY == 0) {
				motionY = 1;
			}
			
			amountOfHits++;
		} else if (checkCollision(paddle2) == 1) {
			this.motionX = -1 - amountOfHits / 5;
			this.motionY = -2 + random.nextInt(4);
			
			if (motionY == 0) {
				motionY = 1;
			}
			amountOfHits++;
		}
		if (checkCollision(paddle1) == 2) {
			paddle2.score++;
			spawn();
		} else if (checkCollision(paddle2) == 2) {
			paddle1.score++;
			spawn();
		}
	}
	
	public void spawn() {
		this.x = pong.width / 2 - this.width / 2;
		this.y = pong.height / 2 - this.height / 2;
		
		if (random.nextBoolean()) {
			motionX = 1;
		} else {
			motionX = -1;
		}
		if (motionY == 0) {
			motionY = 1;
		}
		
		this.motionY = -2 + random.nextInt(4);
	}
	
	public int checkCollision(Paddle paddle){
		if (this.x < paddle.x + paddle.width && this.x + width > paddle.x && this.y < paddle.y + paddle.height && this.y + height > paddle.y) {
			return 1; // paddle
		} else if ((paddle.x - Paddle.distanceFromBorder> x && paddle.paddleNum == 1) || (paddle.x + paddle.width< x - width && paddle.paddleNum == 2)) {
			return 2; // hit side walls
		}
		return 0; // hit nothing 
	}
	
	public void render(Graphics2D g){
		g.setColor(Color.WHITE);
		g.fillOval(x, y, width, height);
	}

}